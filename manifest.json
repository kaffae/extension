  {
    "name": "Teazuk",
    "version": "0.1",
    "description": "Let's understand what you read!",
    "permissions": ["https://*/*", "http://*/*", "*://*/*"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [{
     "matches": ["https://www.technologyreview.com/*", "https://www.reuters.com/*", "https://www.economist.com/*"],
     "js": ["./content.js"],
     "run_at": "document_idle"
    }],
    // "options_page": "options.html",
    "browser_action": {
      "default_title": "Teazuk",
      "default_popup": "popup.html"
      // "default_icon": {
      //   "16": "images/get_started16.png",
      //   "32": "images/get_started32.png",
      //   "48": "images/get_started48.png",
      //   "128": "images/get_started128.png"
      // }
    },
    "web_accessible_resources": [
       "oauth_success.js",
       "oauth_success.html"
    ],
    "icons": {
      // "16": "images/get_started16.png",
      // "32": "images/get_started32.png",
      // "48": "images/get_started48.png",
      // "128": "images/get_started128.png"
    },
    "manifest_version": 2
  }